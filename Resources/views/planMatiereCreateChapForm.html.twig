<form
        role="form"
        id="create-chap-form"
        class="form-horizontal"
        action="{{ path('laurentSchoolPlanMatiereChapCreate', {'planMatiere' : pl.getId()}) }}"
        method="post"
        {{ form_enctype(form) }}
        >
    <div class="panel-body">
        {{ form_widget(form) }}
    </div>
    <div class="form-actions panel-footer">
        <button id="form-create-chap-ok-btn" type="submit" class="btn btn-primary">
            {{ 'ok'|trans({}, 'platform') }}
        </button>
        <button id="form-cancel-btn" type="button" class="btn btn-default">
            {{ 'cancel'|trans({}, 'platform') }}
        </button>
    </div>
</form>